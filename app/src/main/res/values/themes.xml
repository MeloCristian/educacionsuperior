<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Icfes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_fondo</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_launch</item>
    </style>

    <style name="Theme.Icfes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Icfes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Icfes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/stroke_selector</item>
        <item name="hintTextAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="boxStrokeWidth">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundTint">@color/azul_fondo2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_buttons</item>
        <item name="android:paddingStart">@dimen/m_16</item>
        <item name="paddingEnd">@dimen/m_16</item>
    </style>

    <style name="Title" parent="Theme.Icfes">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/m_16</item>
    </style>

    <style name="TitleCardArea" parent="Theme.Icfes">
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textSize">@dimen/font_size_title2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowDx">6</item>
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/m_8</item>
        <item name="android:paddingTop">@dimen/m_8</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Subtitle" parent="Theme.Icfes">
        <item name="android:textSize">@dimen/font_size_title2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">@dimen/m_16</item>
    </style>

    <style name="RadioButton" parent="Theme.Icfes">
        <item name="android:layout_marginEnd">@dimen/m_16</item>
        <item name="android:layout_marginStart">@dimen/m_16</item>
        <item name="android:buttonTint">@color/azul_fondo2</item>
        <item name="android:padding">@dimen/m_8</item>
        <item name="android:textColorLink">@color/azul_fondo3</item>
        <item name="android:textSize">@dimen/font_size_text2</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>