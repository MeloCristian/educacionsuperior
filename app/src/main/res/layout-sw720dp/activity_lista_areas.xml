<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lista_areas"
    android:background="@drawable/fondo1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_title_opciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round"
            android:gravity="center"
            android:text="@string/que_hacer_hoy"
            android:textColor="@color/azul_fondo2"
            android:textSize="@dimen/font_size_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/m_16"
            android:layout_marginStart="@dimen/m_16"
            android:layout_marginEnd="@dimen/m_16"
            android:paddingEnd="@dimen/m_16"
            android:paddingStart="@dimen/m_16"
            />

        <androidx.viewpager.widget.ViewPager
            android:layout_below="@+id/tv_title_opciones"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lista_puntos"/>

        <LinearLayout
            android:id="@+id/lista_puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>